{
  "appId": "com.igreja.admin",
  "appName": "Igreja Admin",
  "webDir": "dist",
  "server": {
    "cleartext": true,
    "allowNavigation": ["*"]
  },
  "plugins": {
    "StatusBar": {
      "style": "LIGHT",
      "backgroundColor": "#FFFFFF"
    },
    "Keyboard": {
      "resize": "none",
      "style": "dark",
      "resizeOnFullScreen": false
    }
  },
  "ios": {
    "path": "ios-admin",
    "contentInset": "never",
    "scrollEnabled": true,
    "webContentsDebuggingEnabled": true,
    "allowsLinkPreview": false,
    "limitsNavigationsToAppBoundDomains": false,
    "preferredContentMode": "mobile"
  },
  "android": {
    "path": "android-admin",
    "buildOptions": {
      "keystorePath": "release-key.keystore",
      "keystoreAlias": "admin-app"
    }
  }
}
