{
  "appId": "com.igreja.member",
  "appName": "Igreja Member",
  "webDir": "dist",
  "server": {
    "cleartext": true,
    "allowNavigation": ["*"],
    "androidScheme": "https",
    "iosScheme": "https",
    "hostname": "app"
  },
  "plugins": {
    "StatusBar": {
      "style": "LIGHT",
      "backgroundColor": "#000000",
      "overlay": false
    },
    "Keyboard": {
      "resize": "none",
      "style": "dark",
      "resizeOnFullScreen": false
    },
    "CapacitorHttp": {
      "enabled": true
    },
    "PushNotifications": {
      "presentationOptions": ["badge", "sound", "alert"]
    }
  },
  "ios": {
    "path": "ios-member",
    "contentInset": "never",
    "scrollEnabled": true,
    "webContentsDebuggingEnabled": true,
    "allowsLinkPreview": false,
    "limitsNavigationsToAppBoundDomains": false,
    "preferredContentMode": "mobile"
  },
  "android": {
    "path": "android-member",
    "buildOptions": {
      "keystorePath": "release-key.keystore",
      "keystoreAlias": "member-app"
    }
  }
}
